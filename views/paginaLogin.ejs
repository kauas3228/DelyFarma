<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link rel="icon" href="/assets/img/grupo logo.svg">
    <title>Tela | Login</title>

</head>
<body>
    <ul class="errors-list">
        <% for (error of errors) { %>
          <li class="error">
            <p class="error__message">
              <%= error %>
            </p>
          </li>
        <% } %>
      </ul>


    <div class="container">
        <img src="/assets/img/logo_farma.png" class="imagem">


            <!--Parte de troca de botões-->

            <div class="buttonsForm">

            <!--Div pra trocar fundo dos botões-->

            <div class="color"></div>

            <!--Botões de troca-->

            <button id="botaoLogin">Login</button>
            <button id="botaoRegistre-se">Registre-se</button>

        </div>


        <!--Formulário de login-->

        <form id="singIn" action="login" method="post"> 

            <!--Input de login-->

            <input type="text" placeholder="EMAIL" required name="email">
            <i class="bi bi-person" id="iconEmailLogin"></i>

            <!--Input de senha-->
        
            <input type="password" placeholder="SENHA" required class="senhaA" name="password">
            <i class="bi bi-lock" id="iconSenhaLogin"></i>
            <span class="mostrarSenha"><i class="bi bi-eye"></i></span>
            
            <!--Div para posicionar esqueceu senha e botão de login-->

            <div class="esqueceuSenha">
                <button type="submit" id="submitLogin">LOGIN</button>
                <span><a href="recuperarSenha.html" id="linkEsqueceuSenha">Esqueceu sua senha?</a></span>
            </div>
        </form>    

        <!--Formulário de registro-->

        <form id="singUp" action="/cadastro" method="post">

            <!--Input de email e Usuário -->

            <input type="text" placeholder="Usuário" required name="usuario">
            <i class="bi bi-person-circle" id="iconUserRegistro"></i>

            <input type="email" placeholder="EMAIL" required name="emailR">
            <i class="bi bi-envelope" id="iconEmailRegistro"></i>

            <!--Validando cpf pattern usado para definir modelo-->

            <input type="text" placeholder="CPF" required name="cpf" pattern="\d{3}\.\d{3}\.\d{3}-\d{2}" name="cpf">
            <i class="bi bi-file-earmark-text-fill" id="iconCpf"></i>

            <!-- Validando Número de telefone -->
            <input type="text" placeholder="Número" required name="number" pattern="([0-9]{2,3})?([0-9]{2})([0-9]{4,5})([0-9]{4})" name="cpf">
            <i class="bi bi-phone" id="iconNumber"></i>
            
            <!--Input de senha-->

            <input type="password" placeholder="SENHA" required id="senhaRegistro" name="passwordR">
            <i class="bi bi-lock" id="iconSenha1"></i>

            <!--Input de confirme password-->

            <input type="password" placeholder="CONFIRME SENHA" required id="senhaLogin" name="passwordRConfirm">
            <i class="bi bi-key" id="iconSenha2"></i>
            
            <!--Botão de cadastrar-->

            <button type="submit">CADASTRAR</button>
            
            <!--Div para posicionar checkbox de termos-->

            <div class="divTermos">
                <input type="checkbox" required>
                <span><a href="#">terms</a></span>
                
            
            </div>
           
            
        </form>   

    </div>



    <script src="/assets/js/main.js"></script>
</body>
</html>